<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link text-light">
                Hola @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName)?.Value!
            </span>
        </li>

        <li class="nav-item">
            <a class="nav-link text-light"
               asp-controller="Account"
               asp-action="Logout">
                Cerrar Sesión
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light"
               asp-controller="Account"
               asp-action="Register">
                Registrarse
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-light"
               asp-controller="Account"
               asp-action="Login">
                Iniciar Sesión
            </a>
        </li>
    }
</ul>