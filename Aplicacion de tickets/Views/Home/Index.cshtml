                        <h5 class="card-title">@Model.TicketsAsignadosPendientes</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Total Tickets Resueltos</div>
                    <div class="card-body">
                        <h5 class="card-title">@Model.TotalTicketsResueltos</h5>
                    </div>
                </div>
            </div>
        }
    </div>

